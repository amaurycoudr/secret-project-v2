---
interface Props {
  image: string;
  title: string;
  subtitle: string;
}

const { image, title, subtitle } = Astro.props;
---

<div
  class="relative z-10 flex h-screen max-h-screen w-full flex-shrink-0 flex-col bg-gray-950"
>
  <div
    class={"relative w-full flex-1 bg-cover bg-top"}
    style={{ backgroundImage: `url(${image})` }}
  >
    <div
      class="absolute bottom-[-2px] h-3/4 w-full bg-gradient-to-b from-transparent to-gray-950"
    >
    </div>
  </div>
  <div
    class="ml-8 flex w-full flex-col text-3xl sm:text-5xl md:text-6xl font-bold lg:max-w-3xl lg:self-center"
  >
    <h1>{title}</h1>
    <h1 class="mb-16 mt-1 text-gray-400">{subtitle}</h1>
  </div>
</div>
